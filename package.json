{
  "name": "heirloom-recordings",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "run-p --race frontend backend",
    "dev": "run-p --race frontend backend:dev",
    "frontend": "vite",
    "backend:dev": "nodemon",
    "backend": "NODE_OPTIONS='--loader ts-node/esm' ts-node ./server.ts",
