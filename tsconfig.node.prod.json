{
  "compilerOptions": {
    /* Base options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "isolatedModules": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Transpiling with tsc */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "distServer",
    "sourceMap": true,

    /* Backend specific */
    "lib": ["ES2022"],

    /* Building for a monorepo */
    "composite": true,
    "declarationMap": true
  },
  "include": ["server/**/*.ts"]
}
